<!doctype html>
<html>
<head>
    <title>Node Login System</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"><!-- load fontawesome -->
</head>
<body>
<!-- navbar with website name and home page only -->
<div>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">NodeLoginSystem</a>
            </div>
            <ul class="nav navbar-nav">
             <li><a href="/"><span style="color:black" class="fa fa-home"> Home</a></li>
            </ul>
        </div>
    </nav>
</div>

<div class="container" style="padding-top: 120px">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-user-plus" style="color:red"></span> Signup</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>
        
        <div>
            <button type="submit" class="btn btn-success btn-lg">Signup</button>
        </div>
    </form>

    <hr>

    <p>Already have an account? <a href="/login">Login</a> here!</p>

</div>

</div>
</body>
</html>